.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color #f3f5f7
    border-color #42b983
  &.warning
    background-color rgba(255,229,100,.3)
    // border-color darken(#ffe564, 35%)
    border-color #ffe564
    color #ffe564
    // color darken(#ffe564, 70%)
    .custom-block-title
      color #ffe564
      // color darken(#ffe564, 50%)
    a
      color var(--regular-text)
  &.danger
    background-color #ffe6e6
    // border-color darken(red, 20%)
    border-color red
    // color darken(red, 70%)
    color red
    .custom-block-title
      color red
      // color darken(red, 40%)
    a
      color var(--regular-text)


